  <script type="text/javascript">
    $(document).ready(function(){
        var i;
        i=1;
        $("#add_img").click(function(){
            if (i<3){
                after_content="#img"+i;
                j=i+1;
                content='<input type="file" name="img'+j+'" id="img' +  j + '" value="">';
                $(after_content).after(content);
                i=i+1;
            }else{
                alert("最多上传3张照片!");
            };
        });
        $("#chuzu").validate({
            rules: {  
                name: {  
                    required: true,  
                    minlength: 2  
                },  
                room: {
                    required: true,
                    minlength: 2
                },
                phone: {
                    required: true,
                    digits: true,
                    minlength:11,
                    maxlength:11,
                },
                addr: {
                    required: true,  
                    minlength: 5
                },
                price: "required"  
            },  
            messages: {  
                name: {  
                    required: '请输入姓名',  
                    minlength: '请至少输入两个字符',
                },  
                phone: {  
                    required: '请输入手机号码',  
                    minlength: '请检查您的手机号',
                    maxlength: '请检查您的手机号',
                },  
                price: '请检查价格',  
                addr: '请输入您的地址',
                room:'请输入房屋类型',
            }  
        });
        $("#qiuzu").validate({
            rules: {  
                qname: {  
                    required: true,  
                    minlength: 2  
                },  
                qroom: {
                    required: true,
                    minlength: 2
                },
                qphone: {
                    required: true,
                    digits: true,
                    minlength:11,
                    maxlength:11,
                },
                qaddr: {
                    required: true,  
                    minlength: 5
                },
                qprice: "required"  
            },  
            messages: {  
                qname: {  
                    required: '请输入姓名',  
                    minlength: '请至少输入两个字符',
                },  
                qphone: {  
                    required: '请输入手机号码',  
                    minlength: '请检查您的手机号',
                    maxlength: '请检查您的手机号',
                },  
                qprice: '请检查价格',  
                qaddr: '请输入您的地址',
                qroom:'请输入房屋类型',
            }  
        });
    });
  </script>
